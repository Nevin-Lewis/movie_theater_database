<section class="container">
  <h3 class="genre-name">{{genre.name}}</h3>
  <h4>Run Time {{format_time movie.run_time}}</h4>
  <!-- If the user is logged in, render the gallery content -->
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each genre.movies as |movie|}}
    {{> movie-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">Please login to see our genres!</a>
{{/if}}